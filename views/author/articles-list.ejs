<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <title>MY BLOG</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <a class="navbar-brand" href="/">MY BLOG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Reader Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <div class="my-2 my-lg-0">
                <% if(user) { %>
                    <a class="text-white"><%=user%></a>
                    <a class="btn btn-outline-success my-2 my-sm-0" href="/auth/logout">Logout</a>
                <% } else { %>
                <a class="btn btn-outline-success my-2 my-sm-0" href="/auth/login">Author Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            Author Page
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <a href="/articles/create" class="btn btn-primary btn-sm">Create New Draft</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped border">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Subtitle</th>
                                <th>Author</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%= item.article_title %>
                                    </td>
                                    <td>
                                        <%= item.article_subtitle %>
                                    </td>
                                    <td>
                                        <%= item.user_record_name %>
                                    </td>
                                    <td>
                                        <%= item.status %>
                                    </td>
                                    <td><a href="/articles/edit/<%= item.article_id %>"
                                            class="btn btn-primary btn-sm mx-1">Edit</a>
                                        <a href="/articles/settings/<%= item.article_id %>"
                                            class="btn btn-warning btn-sm mx-1">Settings</a>
                                        <% if (item.status=="Draft" ){ %>
                                            <a href="/articles/publish/<%= item.article_id %>"
                                                class="btn btn-success btn-sm mx-1">Publish</a>
                                            <% } %>
                                                <a href="/articles/delete/<%= item.article_id %>"
                                                    class="btn btn-danger btn-sm mx-1">Delete</a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <script>

    </script>
</body>

</html>